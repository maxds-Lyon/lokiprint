{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/People",
  "definitions": {
    "People": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "meta": {
          "$ref": "#/definitions/Meta"
        },
        "profile": {
          "$ref": "#/definitions/Profile"
        },
        "presentation": {
          "type": "string"
        },
        "skills": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Skill"
          }
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Link"
          }
        },
        "education": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Education"
          }
        },
        "experiences": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Experience"
          }
        }
      },
      "required": ["experiences", "profile", "skills"],
      "title": "People description"
    },
    "Meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "idBoond": {
          "type": "integer"
        },
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        }
      },
      "required": ["idBoond", "firstname", "lastname"],
      "title": "Meta"
    },
    "Profile": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "trigram": {
          "type": "string"
        },
        "pronouns": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "experience": {
          "type": "string"
        },
        "availability": {
          "type": "string"
        }
      },
      "required": ["availability", "experience", "trigram", "title"],
      "title": "Profile"
    },
    "Skill": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["items", "title"],
      "title": "Skill"
    },

    "Education": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "dates": {
          "type": "string"
        }
      },
      "required": ["dates", "location", "name"],
      "title": "Education"
    },
    "Experience": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "badge": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "dates": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "work": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Work"
          }
        }
      },
      "required": ["name"],
      "title": "Experience"
    },
    "Work": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      },
      "required": ["content"],
      "title": "Work"
    },
    "Link": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "icon": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["icon", "text", "url"],
      "title": "Link"
    }
  }
}
